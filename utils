import streamlit as st

# Function to inject custom CSS for RTL layout
def set_rtl():
    st.markdown(
        """
        <style>
        body, .css-1lcbmhc, .css-1e5imcs, .css-1wif8ho { 
            direction: rtl;
            text-align: right;
        }
        </style>
        """,
        unsafe_allow_html=True
    )

